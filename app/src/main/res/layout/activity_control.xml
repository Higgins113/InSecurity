<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.stephen.InSecurity.Control">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Alarm On"
        android:id="@+id/buttonAlarm"
        android:onClick="alarmOn"
        android:layout_marginTop="72dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Power On"
        android:onClick="powerOn"
        android:id="@+id/buttonPowerOn"
        android:layout_below="@+id/buttonAlarm"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="36dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Alarm Off"
        android:onClick="alarmOff"
        android:id="@+id/buttonAlarmOff"
        android:layout_alignTop="@+id/buttonAlarm"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="59dp"
        android:layout_marginEnd="59dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Power Off"
        android:onClick="powerOff"
        android:id="@+id/buttonPowerOff"
        android:layout_alignBottom="@+id/buttonPowerOn"
        android:layout_alignLeft="@+id/buttonAlarmOff"
        android:layout_alignStart="@+id/buttonAlarmOff" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Heating On"
        android:onClick="heatingOn"
        android:id="@+id/buttonHeatingOn"
        android:layout_below="@+id/buttonPowerOn"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="55dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Heating Off"
        android:onClick="heatingOff"
        android:id="@+id/buttonHeatingOff"
        android:layout_alignBottom="@+id/buttonHeatingOn"
        android:layout_alignLeft="@+id/buttonPowerOff"
        android:layout_alignStart="@+id/buttonPowerOff" />

</RelativeLayout>
